{
  "name": "ccg",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "airtable": "node -r esm airtable.js",
    "bootstrap": "lerna bootstrap",
    "start:dev": "lerna bootstrap && lerna run --scope @ccg/dev start --stream",
    "start:game": "lerna bootstrap && lerna run --scope @ccg/game start --stream",
    "start:game:p1": "lerna bootstrap && lerna run --scope @ccg/game start:p1 --stream",
    "start:game:p2": "lerna bootstrap && lerna run --scope @ccg/game start:p2 --stream",
    "start:server": "lerna bootstrap && lerna run --scope @ccg/server start --stream",
    "start:site": "lerna run --scope @ccg/site dev --stream",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "test": "jest",
    "test:server": "jest --projects packages/server",
    "test:utils": "jest --projects packages/utils"
  },
  "devDependencies": {
    "@babel/core": "^7.10.2",
    "@babel/node": "^7.10.1",
    "@babel/plugin-transform-modules-commonjs": "^7.10.1",
    "@babel/preset-env": "^7.10.2",
    "@testing-library/jest-dom": "^5.9.0",
    "@testing-library/react": "^10.1.0",
    "@testing-library/user-event": "^11.0.0",
    "airtable-node": "^0.1.20",
    "babel-plugin-module-resolver": "^4.0.0",
    "enzyme-to-json": "^3.4.3",
    "eslint": "^6.5.1",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.4.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-react-hooks": "^1.7.0",
    "lerna": "^3.18.1",
    "node-sass": "^4.14.1",
    "prettier": "^1.18.2",
    "react-app-rewired": "^2.1.3"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.3.6",
    "axios": "^0.21.1",
    "boardgame.io": "^0.39.12",
    "cloudinary-react": "^1.5.0",
    "core-js": "3",
    "customize-cra": "^0.8.0",
    "dotenv": "^8.2.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.15.1",
    "esm": "^3.2.25",
    "is-promise": "^4.0.0",
    "lodash-es": "^4.17.15",
    "magic.css": "^1.4.5",
    "mathjs": "^7.0.1",
    "memoize-one": "^5.1.1",
    "next": "^11.1.0",
    "node-fetch": "^2.6.0",
    "nodemon": "^2.0.4",
    "pure-react-carousel": "^1.27.1",
    "react": "^16.10.2",
    "react-animate-height": "^2.0.21",
    "react-burger-menu": "^2.6.15",
    "react-countup": "^4.3.3",
    "react-dom": "^16.10.2",
    "react-full-screen": "^0.2.4",
    "react-helmet": "^6.0.0",
    "react-hot-loader": "^4.12.21",
    "react-image": "^4.0.1",
    "react-redux": "^7.2.0",
    "react-responsive": "^8.1.0",
    "react-scripts": "3.2.0",
    "react-scroll-to-bottom": "^2.0.0",
    "react-search-box": "^2.0.2",
    "react-select": "^3.1.0",
    "react-spring": "^9.0.0-rc.3",
    "react-svg": "^11.0.24",
    "react-tiny-fab": "^3.5.0",
    "react-tooltip": "^4.2.6",
    "react-transition-group": "^4.4.1",
    "react-use-gesture": "^7.0.15",
    "react-use-hover": "^1.0.0",
    "react-virtualized": "^9.21.2",
    "react-virtualized-auto-sizer": "^1.0.2",
    "react-visibility-sensor": "^5.1.1",
    "regenerator": "^0.14.4",
    "styled-components": "^5.1.1",
    "superagent": "^5.2.2",
    "swr": "^0.2.2",
    "use-callback-ref": "^1.2.4",
    "uuid": "^8.1.0"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:jsx-a11y/recommended",
      "plugin:prettier/recommended",
      "plugin:react/recommended",
      "prettier/react",
      "react-app"
    ],
    "env": {
      "browser": true
    },
    "rules": {
      "react/jsx-filename-extension": [
        1,
        {
          "extensions": [
            ".js",
            ".jsx",
            ".tsx"
          ]
        }
      ]
    },
    "settings": {
      "react": {
        "version": "detect"
      },
      "import/resolver": {
        "node": {
          "extensions": [
            ".js",
            ".jsx"
          ]
        }
      }
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
